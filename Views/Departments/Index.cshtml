@model List<EmployeeManager.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
              Name
            </th>
            <th>
               Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.DepartmentId
            </td>
            <td>
                @item.DeptName
            </td>
            <td>
                @item.Loc
            </td>
            <td>
                    <a asp-action="Details" asp-controller="Departments" asp-route-id="@item.DepartmentId">Detail</a>
                    <a asp-action="Edit" asp-controller="Departments" asp-route-id="@item.DepartmentId">Edit</a>
                    <a asp-action="Delete" asp-controller="Departments" asp-route-id="@item.DepartmentId">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
